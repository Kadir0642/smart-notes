{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             /* Node.js'in anladığı standart modül sistemi */
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,          /* CommonJS ve ES Modules uyumu için şart */
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   /* Tip güvenliğini açık tutar (İyi bir şey) */
    "skipLibCheck": true,             /* Kütüphane dosyalarındaki hataları görmezden gel */
    "verbatimModuleSyntax": false     
  }
}